<Window x:Class="LogoDetect.Services.ThresholdSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adjust Logo Detection Threshold" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        SizeToContent="Manual"
        Width="1800"
        Height="980"
        KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main content area with image and slider -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Image display -->
            <Border Grid.Column="0" Background="White" Padding="10">
                <Image x:Name="GraphImage" Stretch="Uniform"/>
            </Border>

            <!-- Vertical threshold slider -->
            <Border Grid.Column="1" Background="#F0F0F0" BorderBrush="#DDD" BorderThickness="1,0,0,0" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Threshold" 
                               HorizontalAlignment="Center" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    
                    <Slider x:Name="ThresholdSlider" 
                            Grid.Row="1"
                            Orientation="Vertical"
                            Minimum="0.01" 
                            Maximum="2.0" 
                            TickFrequency="0.01"
                            IsSnapToTickEnabled="True"
                            HorizontalAlignment="Center"
                            ValueChanged="ThresholdSlider_ValueChanged"
                            TickPlacement="BottomRight"/>
                    
                    <TextBlock x:Name="ThresholdValue" 
                               Grid.Row="2"
                               HorizontalAlignment="Center" 
                               FontWeight="Bold" 
                               FontSize="16"
                               MinWidth="60"
                               TextAlignment="Center"
                               Margin="0,10,0,0"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="15" Background="#F8F8F8">
            <TextBlock Text="Adjust the threshold value and press Enter or click OK to confirm." 
                       VerticalAlignment="Center" Margin="10" FontStyle="Italic" Foreground="#666"/>
            <Button x:Name="OkButton" Content="OK" Width="100" Height="35" Margin="10" Click="OkButton_Click" IsDefault="True" FontWeight="SemiBold"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="35" Margin="10" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
