<Window x:Class="LogoDetect.Services.BoundingBoxSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Logo Bounding Box" 
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Canvas for image and selection rectangle -->
        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="ImageCanvas" 
                    Background="Black"
                    MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                    MouseMove="Canvas_MouseMove"
                    MouseLeftButtonUp="Canvas_MouseLeftButtonUp">
                <Image x:Name="LogoImage" Stretch="None"/>
                
                <!-- Selection Rectangle -->
                <Rectangle x:Name="SelectionRect"
                          Stroke="Red"
                          StrokeThickness="2"
                          Fill="Transparent"
                          Visibility="Collapsed"/>
                
                <!-- Resize handles -->
                <Ellipse x:Name="TopLeftHandle" Fill="Red" Width="8" Height="8" Cursor="SizeNWSE" Visibility="Collapsed"/>
                <Ellipse x:Name="TopRightHandle" Fill="Red" Width="8" Height="8" Cursor="SizeNESW" Visibility="Collapsed"/>
                <Ellipse x:Name="BottomLeftHandle" Fill="Red" Width="8" Height="8" Cursor="SizeNESW" Visibility="Collapsed"/>
                <Ellipse x:Name="BottomRightHandle" Fill="Red" Width="8" Height="8" Cursor="SizeNWSE" Visibility="Collapsed"/>
            </Canvas>
        </ScrollViewer>

        <!-- Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Background="#F0F0F0">
            <TextBlock Text="Instructions: Click and drag to select the logo area. Drag the red handles to resize. Press Enter or click OK to confirm." 
                       VerticalAlignment="Center" Margin="10"/>
            <Button x:Name="OkButton" Content="OK" Width="80" Height="30" Margin="10" Click="OkButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Reset" Width="80" Height="30" Margin="10" Click="CancelButton_Click"/>
            <TextBlock x:Name="StatusText" VerticalAlignment="Center" Margin="10" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
