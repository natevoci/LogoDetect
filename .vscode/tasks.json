{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "dotnet",
			"task": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"label": "dotnet: build"
		},
		{
			"label": "run: LogoDetect",
			"type": "process",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"${workspaceFolder}/LogoDetect/LogoDetect.csproj",
				"--",
				"--reload",
				"--input",
				"Z:\\TV\\Fringe\\Fringe - s05e06 - Through the Looking Glass and What Walter Found There-SD.mp4"
			],
			"problemMatcher": [],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"dependsOn": ["dotnet: build"]
		},
		{
			"label": "build: publish",
			"type": "shell",
			"command": "dotnet publish LogoDetect/LogoDetect.csproj --self-contained -r win-x64 -o LogoDetect\\publish",
			"group": "build",
			"problemMatcher": ["$msCompile"],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "build: installer",
			"type": "shell",
			"command": "vpk pack --packId LogoDetect --packVersion 1.0.0 --packDir LogoDetect/publish --mainExe LogoDetect.exe --yes --skip-updates",
			"group": "build",
			"problemMatcher": ["$msCompile"],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"dependsOn": ["build: publish"]
		},
		{
			"label": "profile: LogoDetect",
			"type": "process",
			"command": "${workspaceFolder}/LogoDetect/bin/Debug/net8.0/LogoDetect.exe",
			"args": [
				"--input",
				"TestSamples/1/video.mp4",
				"--keepDebugFiles",
				"--max-frames",
				"2000"
			],
			"problemMatcher": [],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"dependsOn": ["dotnet: build"]
		}
	]
}